{
	"compilerOptions": {
		"module": "Node16",
		"moduleResolution": "Node16",
		"target": "ES2020",
		"outDir": "dist",
		"lib": [
			"ES2020",
			"WebWorker",
			"DOM"
		],
		"sourceMap": true,
		"rootDir": "src",
		"strict": true,
		"jsx": "react-jsx",
		"types": [
			"mocha",
			"node",
			"webpack-env"
		]
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.tsx",
		"src/web/view/vscode.d.ts"
	],
	"exclude": [
		"src/web/view",
		"**/*.test.ts",
		"**/*.test.tsx"
	]
}
